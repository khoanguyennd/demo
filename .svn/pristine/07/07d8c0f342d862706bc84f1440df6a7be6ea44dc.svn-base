<html>
    <head>
        <title>Tbridge mobile</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <style>
        *{margin: 0px; padding: 0px;}
        .cl{clear: both;}
        @media (min-width: 1200px){
        }
        @media (min-width: 992px) and (max-width: 1200px){

        }
        @media (min-width: 768px) and (max-width: 992px){

        }
        @media (min-width: 500px) and (max-width: 768px){
            .t_page_login{padding: 20px;}
            .t_logo{text-align: center;}
            .t_logo h2{margin: 0px;}
            .t_logo p{margin-top: 0px;}
            
            .t_form_login{padding:20px 0px;}
            .div_input_name{margin-bottom: 8px;}
            .div_input_name input[type="text"]{border: 1px solid #a6a6a6; height:40px; line-height: 40px; width: 100%;}
            .div_input_pass{margin-bottom: 13px;}
            .div_input_pass input[type="password"]{border: 1px solid #a6a6a6; height:40px; line-height: 40px; width: 100%}
            .div_input_checkbox{margin-bottom: 13px;}
            
            .t_btn_submit_login{width: 100%; height:40px; line-height: 40px; background: #d9d9d9; border: 1px solid #a6a6a6; color: #fff; font-weight: bold; font-size: 18px; font-family: none;}
            .t_p_findid{width: 75%;float: left;text-align: center;padding: 5px 0px;}
            .t_p_pcversion{width: 25%;float: right;text-align: right;}
            .t_p_pcversion input{padding: 5px; color: red; border: 1px solid red; font-weight: bold;}
            .t_btn_submit_login:hover{background: #000; cursor: pointer;}
        }
        @media (min-width: 350px) and (max-width: 500px){
            
            .t_page_login{padding: 20px;}
            .t_logo{text-align: center;}
            .t_logo h2{margin: 0px;}
            .t_logo p{margin-top: 0px;}
            
            .t_form_login{padding:20px 0px;}
